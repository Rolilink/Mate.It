@import colors
@import header

#user-dashboard
	margin-top 53px
	top 0
	left 0
	right 0
	bottom 0
	position absolute
	& > div.row
		height 100%
		#dashboard-navigation
			padding-left 0px
			padding-right 0px
			height 100%
			color white
			background-color #2cb0d6
			nav, ul, li 
				margin-left 0
				padding-left 0
			nav
				margin-top 10px
			li
				&:hover,&.active
					background-color #228dac
				width 100%
				text-align center
				list-style none
				padding-top 10px
				padding-bottom 10px
			a 
				color white
				font-size 30px
			
	