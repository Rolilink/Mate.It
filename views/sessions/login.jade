// Extends Layout
extends ../layouts/main.jade

// Main Area Content Block 
block content
	div.container
		div.row
			div.col-md-6.col-md-offset-3
				div.panel
					div.panel-body
						form(action="/login",method="post", style="width:80%; margin:auto;")
							h3.text-center Login
							div.form-group
								label(for="loginUsername") Username: 
								input.form-control#loginUsername(type="text",name="username")
							div.form-group
								label(for="loginPassword") Password:
								input.form-control#loginPassword(type="password",name="password")
							div.form-group
								input.btn.btn-primary(type="submit",value="Login")

// style for different color body
block head
	style body{ background: #AAB2BD;}
